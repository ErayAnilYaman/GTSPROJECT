@model List<Data.Models.Thesis>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<a class="btn btn-success" href="/user/add">Add Thesis</a>
<br />
<br />
@if (Model.Count > 0 && Model != null)
{


    <table class="table table-bordered" id="table">
        <tr>
            <th>Thesis No</th>
            <th>Thesis Title</th>
            <th>Author Name</th>
            <th>Primary Supervisor Name</th>
            <th>Institute</th>
            <th>University</th>
            <th>Language</th>
            <th>Date</th>
            <th>Update</th>
            <th>Delete</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr id="sale-table" data-id="@item.THESISID">
                <td>@item.NUMBER</td>
                <td>@item.TITLE</td>
                <td>@item.AUTHOR.AUTHORNAME @item.AUTHOR.LASTNAME</td>
                <td>@item.SUPERVISOR.FIRSTNAME  @item.SUPERVISOR.LASTNAME</td>
                <td>@item.INSTITUTE.NAME</td>
                <td>@item.UNIVERSITY.NAME</td>
                <td>@item.LANGUAGE</td>
                <td>@item.SUBMISSIONDATE</td>
                <td><a class="btn btn-warning" href="/user/update/@item.THESISID">Update</a></td>
                <td><a class="btn btn-danger" href="/user/delete/@item.THESISID">Delete</a></td>
            </tr>
        }

    </table>
}
else
{
    <h1>Thesis Not Found!!</h1>
}



