@model Data.Models.Thesis
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

                <div class="form-group">
                    @Html.LabelFor(x => x.ABSTRACT)
                    <textarea class="form-control" name="ABSTRACT" rows="4">@Model.ABSTRACT</textarea>
                    @Html.ValidationMessageFor(x => x.ABSTRACT, "", new { @style = "color:red" })
                </div>
                <br />
                <button class="btn btn-success" type="submit">Change</button>
            </form>
        </div>
    </div>
</div>