@model Data.Models.DTOs.AccountToLogin
@{
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })
                <div class="form-group">
                    @Html.LabelFor(x => x.USERNAME)
                    <input type="text" class="form-control" name="USERNAME" /> <!-- Değiştirilen kısım -->
                    @Html.ValidationMessageFor(x => x.USERNAME, "", new { @style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(x => x.PASSWORD)
                    <input type="password" class="form-control" name="PASSWORD" /> <!-- Değiştirilen kısım -->
                    @Html.ValidationMessageFor(x => x.PASSWORD, "", new { @style = "color:red" })
                </div>
                <button class="btn btn-success" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>
